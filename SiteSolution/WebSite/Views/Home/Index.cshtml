@{
    ViewBag.Title = "Home Page";
}
    <link href="~/Content/styles/order_details.css" rel="stylesheet" />

<div id="main_data" class="row col-12" style="margin-top: 2rem;">
    <h2>Main Data</h2>
    <div class="container">
        <div class="col-6 float-left">
            <section>
                <div><b>Order #:</b> 12345</div>
                <div><b>CT Res #:</b> -</div>
                <div><b>Status:</b> (KK) Confirmed</div>
                <div><b>Prepayment due by:</b> N/A</div>
            </section>
            <section>
                <div><b>Order Date:</b> @DateTime.Now.ToLongDateString()</div>
                <div><b>Generated By:</b> Fabian Bartaburu</div>
            </section>
            <section>
                <div><b>Agency:</b> Test</div>
                <div><b>Agency City:</b> Montevideo</div>
                <div><b>Agency Country:</b> Uruguay</div>
                <div><b>Agency Code:</b> X304</div>
                <div><b>Agency Reference:</b> Daedalus</div>
            </section>
            <section>
                <div><b>Agent:</b> Fabian Bartaburu</div>
                <div><b>Agent Email:</b> fbartaburu@gmail.com</div>
            </section>
        </div>
        <div class="col-6 float-left">
            <section>
                <div class="confirmed"><b>Services Confirmed</b></div>
                <div><b>Published Price:</b> 0.00</div>
                <div><b>Commission Due:</b> 0.00</div>
                <div><b>Resort Fee:</b> 0.00</div>
            </section>
            <section>
                <div class="awaiting"><b>AW and/or FP</b></div>
                <div><b>Published Price:</b> 0.00</div>
                <div><b>Commission Due:</b> 0.00</div>
                <div><b>Resort Fee:</b> 0.00</div>
            </section>
            <section>
                <div><b>Total: </b> 0.00</div>
            </section>
        </div>
    </div>
</div>

<div id="passengers" class=" row col-12" style="margin-top: 2rem;">
    <h2>Passengers</h2>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Citizenship</th>
                    <th scope="col">Language</th>
                    <th scope="col">Document #1</th>
                    <th scope="col">Document #2</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.lPassengers)
                {
                <tr class="table-active">
                    <td>@item.sName</td>
                    <td>@item.nAge</td>
                    <td>@item.sGender</td>
                    <td>@item.sCitizenship</td>
                    <td>@item.sLanguage</td>
                    <td>@item.sDocument_1</td>
                    <td>@item.sDocument_2</td>
                </tr>
                }
            </tbody>
        </table>
                
    </div>
</div>

<div id="hotels" class=" row col-12" style="margin-top: 2rem;">
    <h2>Hotels</h2>
    <div class="container">

        @foreach (var item in ViewBag.lHotels)
        {
        <div class="card text-white bg-primary mb-3 @item.sStatusCode">
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-10">
                            <div>
                                <h4 class="card-title" style="width: 100%;">@item.sName</h4>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div>
                                        <b>Address: </b>@item.sAddress
                                    </div>
                                    <div>
                                        <b>Price: </b>@item.nPrice
                                    </div>
                                    <div>
                                        <b>Penalty: </b>@item.nPenalty
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div>
                                        <b>Chekin: </b>@item.dCheckin.ToLongDateString()
                                    </div>
                                    <div>
                                        <b>Chekout: </b>@item.dCheckout.ToLongDateString()
                                    </div>
                                    <div>
                                        <b>Room Type: </b>@item.sRoomType
                                    </div>
                                    <div>
                                        <b>Main Passenger: </b>@item.sMainPassenger
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-2 border-left">
                            <div class="statusCode textColor_@item.sStatusCode">@item.sStatusCode</div>
                            <div class="statusDesc">@item.sStatusName</div>
                            <div class="statusDesc">Broker #: @item.nBroker</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
        
        
    </div>
</div>
